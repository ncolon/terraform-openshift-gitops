# GitHub Credentials
github_token      = "ghp_xxxxxxxxxxxxxxxxxxxxxxx"
github_target_org = "ncolon-demos"

# sealed secret, get from https://bit.ly/demo-sealed-master if needed
sealed_secret_key_file = "/path/to/sealed-secrets-ibm-demo-key.yaml"

openshift_kubeconfig = "/path/to/kubeconfig"

bastion_host     = "localhost"
bastion_username = "username"
private_ssh_key  = "~/.ssh/openshift_rsa"

gitops_infra = true


# bring your own application
github_application_repos = {
  ace-customer-details : {
    source_repo : "ace-customer-details"
    source_org : "cloud-native-toolkit-demos"
    local : "src-ace-app-customer-details"
    branch : "master"
  }
}

